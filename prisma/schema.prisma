generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  cards Card[]
}

model Card {
  id     Int    @id @default(autoincrement())
  name   String
  url    String
  anime  String
  userId Int
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}
